{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["app/controllers/*"],
      "@middlewares/*": ["app/middlewares/*"],
      "@models/*": ["app/models/*"],
      "@repositories/*": ["app/repositories/*"],
      "@routes/*": ["routes/*"],
      "@service/*": ["service/*"],
      "@lib/*": ["lib/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
